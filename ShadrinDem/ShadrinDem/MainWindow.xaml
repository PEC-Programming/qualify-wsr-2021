<Window x:Class="ShadrinDem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShadrinDem"
        mc:Ignorable="d"
        Title="Намордник" Height="450" Width="800" Icon="Намордник.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="395*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            
            <TextBlock Text="{Binding ElementName=FrmMain, Path=Content.Title}"/>

        </StackPanel>
        <Image Source="/Product/Намордник.png"
               HorizontalAlignment="Left"/>


        <Frame x:Name="FrmMain" Grid.Row="1"/>
    </Grid>
</Window>
